{
  "name": "coolest-platform",
  "version": "0.1.0",
  "description": "The Coolest Platform for the coolest of events, Coolest Projects",
  "main": "server/app.js",
  "repository": "git@github.com:CoderDojo/coolest-platform.git",
  "author": "CoderDojo Foundation <webteam@coderdojo.com>",
  "license": "MIT",
  "scripts": {
    "build": "node client/build/build.js",
    "start": "concurrently --kill-others --success first \"yarn server-start\" \"yarn client-start\"",
    "start-dev": "concurrently --kill-others --success first \"yarn server-start --seed --trace-sync-io\" \"yarn client-start\"",
    "start-with-mocks": "concurrently --kill-others --success first \"yarn mock-server\" \"yarn client-start\" ",
    "test": "yarn client-unit && yarn server-unit && yarn server-int",
    "lint": "eslint --ext .js,.vue .",
    "precommit": "lint-staged",
    "client-start": "node client/build/dev-server.js",
    "client-unit": "cross-env BABEL_ENV=test karma start client/test/unit/karma.conf.js --single-run",
    "client-lint": "eslint --ext .js,.vue src client/test/unit/specs",
    "mock-server": "node ./client/mock-server/server.js",
    "server-start": "cd server && node bin/www",
    "server-unit": "HOSTNAME=http://platform.local mocha -t 3000 --require ./server/test/helper.js ./server/test/unit --recursive --reporter=nyan --forbid-pending",
    "server-int": "mocha -t 10000 --require ./server/test/helper.js ./server/test/integration --recursive --reporter=nyan --forbid-pending",
    "server-lint": "eslint server --env mocha,chai --global expect,sinon"
  },
  "lint-staged": {
    "*.vue": [
      "eslint --fix --ext .js,.vue",
      "git add"
    ],
    "*.js": [
      "eslint --fix --ext .js,.vue",
      "git add"
    ]
  },
